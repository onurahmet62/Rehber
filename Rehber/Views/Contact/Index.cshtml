@model IEnumerable<Rehber.Models.Contact>

@{
    ViewData["Title"] = "Index";
   
}

<div  class="container-xxl  ">
    <h4  class="fw-bold py-6 mb-8">
        <span class="text-muted fw-light">Rehber /</span> Kişiler
    </h4>

<div class="card">
    <div  class="table-responsive text-nowrap m-5">
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered" id="Contact" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                    <a class="btn btn-primary btn-sm"  asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                 <a class="btn btn-warning">  asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-danger btn-sm"  asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

    </div>
</div>
</div>

@section Scripts {
    <script src="~/js/Index.js" type="application/ecmascript"></script>
}
<script>

    $(document).ready(function () {
        $('#searchInput').on('keyup', function () {
            var value = $(this).val().toLowerCase();
            $('#Contact tbody tr').filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });

    $(document).ready(function () {
        $('#Contact').DataTable();
    });
</script>
